# linux/macos (unix)
rm -rf ~/.config/nvim
rm -rf ~/.local/share/nvim
rm -rf ~/.cache/nvim

git clone https://github.com/NvChad/NvChad ~/.config/nvim --depth 1 && nvim
ln -s ${PWD}/filetype.vim ~/.config/nvim/filetype.vim
ln -s ${PWD}/ftplugin ~/.config/nvim/ftplugin
ln -s ${PWD}/custom ~/.config/nvim/lua/custom
